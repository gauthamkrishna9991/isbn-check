<Window x:Class="ISBN_Check.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ISBN_Check"
        mc:Ignorable="d"
        Title="MainWindow" Height="240" Width="320">
    <Grid>
        <TextBox x:Name="IsbnText" HorizontalAlignment="Center" Height="23" Margin="0,-75,0,0" TextWrapping="Wrap" Text="Enter ISBN Here" VerticalAlignment="Center" Width="120" TextChanged="TextBox_TextChanged" FontSize="16"/>

    </Grid>
</Window>
